\ExplSyntaxOn
\NewDocumentCommand \meta { m } {
  [ \textit{#1} ]
}

\NewDocumentCommand \Term { m } {
  \enquote* { #1 }
}

\NewDocumentCommand \ie { } {
  i.\,e.
  \nobreakspace
}

\NewDocumentCommand \eg { } {
  e.\,g.
  \nobreakspace
}

\NewDocumentCommand \object { m } {
  \enquote*{#1}
}

\NewDocumentCommand \citeay { m } {
  \citeauthor{#1},\nobreakspace\citeyear{#1}
}

\NewDocumentCommand \BooleanTrueValue { } {
  \text{True}
}

\NewDocumentCommand \BooleanFalseValue { } {
  \text{False}
}

\NewDocumentCommand \SetBoolean { } {
  \Set{\BooleanTrueValue, \BooleanFalseValue}
}

\NewDocumentCommand \Algorithm { m } {
  \textsc{#1}
}

\NewDocumentCommand \ifacefield { m } {
  \textsf{#1}
}

\RenewDocumentCommand \textsc { m } {
  {
    \fontspec{Latin ~ Modern ~ Roman ~ Caps}
    #1
  }
}

\NewDocumentCommand \fileformat { m } {
  \texttt{#1}
}

\NewDocumentCommand \TikZ { } {
  Ti\emph{k}z
}

\NewDocumentCommand \QuoteLiteral { m } {
  \char`" #1 \char`"
}

